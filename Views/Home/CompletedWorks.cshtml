@model List<FixesApp.Models.WorkDetails>
@{
    ViewBag.Title = "Completed Works";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@Html.Partial("_Navbar")
<h2>Completed Works</h2>

@if (Model.Count == 0)
{
    <p>No Completed Works</p>
}
else
{


    <table class="table">
        <tr>
            <th>Booking Id</th>
            <th>Name</th>
            <th>Service</th>
            <th>Date</th>
            <th>Status</th>
        </tr>
        @foreach (var val in Model)
        {
    <tr>
        <td>@val.WorkDetailsId</td>
        <th>@Html.ActionLink(val.WorkerName, "WorkerProfile", "Home", new { id = val.WorkerId }, null)</th>
        <td>@val.ServiceName</td>
        <td>@val.WorkdoneDT</td>
        <td style="color:green">Completed</td>
        @if (val.Feedbackstatus == 0)
        {
            <td>@Html.ActionLink("Give Feedback", "Feedback", "Home", new { id = val.WorkDetailsId }, null)</td>
        }
        


    </tr>
        }

    </table>
}